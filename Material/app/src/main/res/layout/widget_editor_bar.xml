<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_editor_bar"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/app_bar_size"
    android:orientation="horizontal"
    tools:background="?attr/widgetBackground">

    <ImageView
        android:id="@+id/btn_format_bold"
        android:layout_width="@dimen/app_bar_size"
        android:layout_height="@dimen/app_bar_size"
        android:src="@drawable/ic_format_bold_grey600_24dp"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackground" />

    <ImageView
        android:id="@+id/btn_format_italic"
        android:layout_width="@dimen/app_bar_size"
        android:layout_height="@dimen/app_bar_size"
        android:src="@drawable/ic_format_italic_grey600_24dp"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackground" />

    <ImageView
        android:id="@+id/btn_format_quote"
        android:layout_width="@dimen/app_bar_size"
        android:layout_height="@dimen/app_bar_size"
        android:src="@drawable/ic_format_quote_grey600_24dp"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackground" />

    <ImageView
        android:id="@+id/btn_format_list_bulleted"
        android:layout_width="@dimen/app_bar_size"
        android:layout_height="@dimen/app_bar_size"
        android:src="@drawable/ic_format_list_bulleted_grey600_24dp"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackground" />

    <ImageView
        android:id="@+id/btn_format_list_numbered"
        android:layout_width="@dimen/app_bar_size"
        android:layout_height="@dimen/app_bar_size"
        android:src="@drawable/ic_format_list_numbered_grey600_24dp"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackground" />

    <ImageView
        android:id="@+id/btn_insert_code"
        android:layout_width="@dimen/app_bar_size"
        android:layout_height="@dimen/app_bar_size"
        android:src="@drawable/ic_insert_code_grey600_24dp"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackground" />

    <ImageView
        android:id="@+id/btn_insert_link"
        android:layout_width="@dimen/app_bar_size"
        android:layout_height="@dimen/app_bar_size"
        android:src="@drawable/ic_insert_link_grey600_24dp"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackground" />

    <ImageView
        android:id="@+id/btn_insert_photo"
        android:layout_width="@dimen/app_bar_size"
        android:layout_height="@dimen/app_bar_size"
        android:src="@drawable/ic_insert_photo_grey600_24dp"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackground" />

    <ImageView
        android:id="@+id/btn_preview"
        android:layout_width="@dimen/app_bar_size"
        android:layout_height="@dimen/app_bar_size"
        android:src="@drawable/ic_visibility_grey600_24dp"
        android:scaleType="center"
        android:adjustViewBounds="true"
        android:background="?attr/selectableItemBackground" />

</LinearLayout>
