<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseAppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:listDivider">@color/list_divider_light</item>
        <item name="widgetBackground">@color/widget_background_light</item>
        <item name="widgetBackgroundDark">@color/widget_background_checked_light</item>
        <item name="widgetBackgroundTitle">@android:color/white</item>
        <item name="referenceText">@color/reference_text_light</item>
        <item name="referenceBackground">@drawable/reference_background_light</item>
        <item name="darkTheme">false</item>
    </style>

    <style name="AppThemeLight" parent="BaseAppThemeLight" />

    <!-- App Theme Dark -->

    <style name="BaseAppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/window_background_dark</item>
        <item name="android:listDivider">@color/list_divider_dark</item>
        <item name="widgetBackground">@color/widget_background_dark</item>
        <item name="widgetBackgroundDark">@color/widget_background_checked_dark</item>
        <item name="widgetBackgroundTitle">@color/color_primary</item>
        <item name="referenceText">@color/reference_text_dark</item>
        <item name="referenceBackground">@drawable/reference_background_dark</item>
        <item name="darkTheme">true</item>
    </style>

    <style name="AppThemeDark" parent="BaseAppThemeDark" />

    <!-- App Theme Launch -->

    <style name="AppThemeLaunch" parent="BaseAppThemeLight">
        <item name="android:windowBackground">@color/color_primary</item>
    </style>

    <!-- App Dialog Light -->

    <style name="BaseAppDialogLight" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:listDivider">@color/list_divider_light</item>
        <item name="widgetBackground">@color/widget_background_light</item>
        <item name="widgetBackgroundDark">@color/widget_background_checked_light</item>
        <item name="widgetBackgroundTitle">@android:color/white</item>
    </style>

    <style name="AppDialogLight" parent="BaseAppDialogLight" />

    <style name="AppDialogLight.Progress">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppDialogLight.Alert">
        <item name="windowMinWidthMajor">@fraction/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@fraction/dialog_min_width_minor</item>
    </style>

    <style name="AppDialogLight.TopicReply">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AppAnimation.BottomSheet</item>
    </style>

    <!-- App Dialog Dark -->

    <style name="BaseAppDialogDark" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:listDivider">@color/list_divider_dark</item>
        <item name="widgetBackground">@color/widget_background_dark</item>
        <item name="widgetBackgroundDark">@color/widget_background_checked_dark</item>
        <item name="widgetBackgroundTitle">@color/color_primary</item>
    </style>

    <style name="AppDialogDark" parent="BaseAppDialogDark" />

    <style name="AppDialogDark.Progress">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppDialogDark.Alert">
        <item name="windowMinWidthMajor">@fraction/dialog_min_width_major</item>
        <item name="windowMinWidthMinor">@fraction/dialog_min_width_minor</item>
    </style>

    <style name="AppDialogDark.TopicReply">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/AppAnimation.BottomSheet</item>
    </style>

    <!-- App Widget -->

    <style name="AppWidget" parent="Theme.AppCompat.Light" />

    <!-- Deep Line -->

    <style name="AppWidget.DeepLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppWidget.DeepLine.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Gap -->

    <style name="AppWidget.Gap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="AppWidget.ShadowGap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/shadow_gap_elevation</item>
        <item name="android:layout_marginBottom">@dimen/shadow_gap_margin_fill</item>
        <item name="android:background">@drawable/gap_shadow</item>
    </style>

    <style name="AppWidget.ShadowGap.Opposite">
        <item name="android:layout_marginTop">@dimen/shadow_gap_margin_fill</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/gap_shadow_opposite</item>
    </style>

    <!-- Badge Dot -->

    <style name="AppWidget.BadgeDot">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/badge_dot</item>
    </style>

    <!-- App Animation -->

    <style name="AppAnimation" parent="android:Animation" />

    <style name="AppAnimation.BottomSheet">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_slide_out</item>
    </style>




</resources>
